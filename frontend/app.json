{
  "expo": {
    "name": "VitaMed",
    "slug": "vitamed",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "vitamed",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSCameraUsageDescription": "Sağlık belgelerinizi fotoğraflamak için",
        "NSPhotoLibraryUsageDescription": "Galeriden belge seçmek için"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#1E88E5"
      },
      "edgeToEdgeEnabled": true,
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#1E88E5"
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Galeriden belge seçmek için",
          "cameraPermission": "Sağlık belgelerinizi fotoğraflamak için"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
